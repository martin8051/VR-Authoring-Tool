    <script type="text/javascript" src="/js/jquery.min.js"></script>
  </head>
  <body class="mw-100 mh-100" style="background-color:#03182b;">
    <div class="container m-0 mh-100">
      <div class="row mh-100">
        <div class="col-2 mh-100">
          {{> header}}
        </div>
        <div class="col">
          <div class="alert alert-dismissible fade" id="notificationAlert" role="alert">
          </div>
          <!-- Modal for account settings -->
          <div class="modal fade" id="accountSettings" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h2 class="modal-title" id="exampleModalLongTitle">Settings</h2>
                  <button type="button" class="btn btn-danger" data-bs-dismiss="modal" aria-label="Close" >
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form id="saving-profile">
                        <h5>Profile Information</h5>
                        <div class="form-group">
                            <label for="firstNameInput">Full Name:</label>
                            <input type="text" class="form-control" id="firstNameInput" placeholder="{{fullName}}">
                        </div>
                        <br>
                        <h5>Password</h5>
                        <div class="form-group">
                            <label for="newPassInput">Enter New Password:</label>
                            <input type="password"class="form-control" id="newPassInput" placeholder="New password">
                        </div>
                        <div class="form-group">
                            <label for="reNewPassInput">Re-enter New Password:</label>
                            <input type="password" class="form-control" id="reNewPassInput" placeholder="Confirm new password">
                        </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <button type="button" id="updateSettings" class="btn btn-primary" disabled="true">Save Changes</button>
                </div>
              </div>
            </div>
          </div>
          {{{body}}}
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/javascripts/dashboard.js"></script>
  </body>
</html>
