        border: none;
        outline: none;
    }

    p {
        color: #bfc0c0;
        font-size: 0.9rem;
        margin: 20px 0;
    }
    
    .custom-container {
        max-width: 1140px;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-content: space-between;
    }
    
