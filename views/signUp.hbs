<style>
    @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@400&display=swap');
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: #03182b;
    }

    /* before*/

    body::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(#c73c6a, #eb0069);
        clip-path: polygon(30% 10%, 50% 40%, 30% 75%);
    }

    /* after*/

    body::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(#34d0ff, #1928f5);
        clip-path: circle(20% at 70% 75%);
    }

    .popup .content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -150%) scale(0);
        width: 400px;
        height: 100%; /* 600px; */
