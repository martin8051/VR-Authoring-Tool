        transition: background-color ease-in-out;
    }
</style>
<div class="custom-container">
    <div id="toastNotification" class="toast align-items-center hide" role="alert" aria-live="assertive" aria-atomic="true" data-bs-animation="true" data-bs-autohide="true" data-bs-delay="6000">
        <div class="d-flex">
            <div class="toast-body">
            </div>
        </div>
    </div>
    <div class="signup-form">
        <form id="signUpForm">
            <div class="container">
                <div class="popup active" id="popup-1">
                    <div class="content">
                        {{!--<div class="close-btn" onclick="togglePopup()">x</div>--}}
                        <h1>Sign Up</h1>
                        <div class="input-field"><input type="text" name="fullName" id="fullNameInput" class="validate" placeholder="Enter Full Name" class="validate" required></div>
                        <div class="input-field"><input type="text" placeholder="Enter Email" name="emailAddress" id="emailInput" class="validate" value="{{email}}" required></div>
                        <div class="input-field"><input type="password" placeholder="Enter Password" name="password" id="pswInput" required class="validate"></div>
                        <div class="input-field"><input type="password" placeholder="Confirm Password" name="confirmPassword" id="confirmPswInput" required class="validate"></div>
                        <div class="input-field">
                            <select placeholder="Account Type" name="accountType" id="accountTypeSelection" class="validate" required>
        	                    <option value="student">Student</option>
                                <option value="teacher">Teacher</option>
        	                </select>
                        </div>
                    </div>
                </div>
                {{!--<button onclick="togglePopup()" class="first-button">Sign Up</button>--}}
                <script>
                    // function togglePopup() {
                    //     document.getElementById("popup-1")
                    //         .classList.toggle("active");
                    // }
                </script>
            </div>
        </form>
        <div class="button-container">
            <button class="second-button" id="signUpButton">Sign Up</button>
            <p class="text-center">Already have an account? <a href="/sign-in">Sign in</a></p>
        </div>
    </div>
</div>

<script>
    function signUp()
    {
        let dataToBeSent= {};

        let password = "";
        let cPassword = "";
        
        // handling empty input fields
        // focus on input that needs to filled out
        for(inpt of (document.getElementById('signUpForm').elements))
        {
            if(inpt.value.length === 0 && inpt.value == "") {
                $(`#${inpt.id}`).focus();
                break;
            }
            else 
            {
                switch(inpt.name)
                {
                    case "fullName":
                        dataToBeSent.fullName = inpt.value;
                        break;
                    case "emailAddress":
                        dataToBeSent.email = inpt.value;
                        break;
                    case "password":
                        dataToBeSent.password = inpt.value;
                        password = inpt.value;
                        break;
                    case "confirmPassword":
                        cPassword = inpt.value;
                        break;
                    case "accountType":
                        dataToBeSent.accountType = inpt.value;
                        break;
                    default:
                        break;
                }   
            }
        }
        
        
        if(Object.keys(dataToBeSent).length == 4 && password === cPassword)
        {
            $.ajax({
                url: '/sign-up',
                type: 'POST',
                cache: false,
                contentType: 'application/json',
                dataType: 'json',
                data: JSON.stringify(dataToBeSent)
            })
            .done(function(res, textStatus, xhr) {
                // console.log(res.signedUp);
                if(res.signedUp)
                {
                    $('.toast').addClass('bg-successfully-created');
                    $('.toast-body').text(res.message);
                    $('.toast').toast('show');
                    $('#signUpForm').trigger('reset');
                    setTimeout(function(){
                        window.location.replace(res.redirect);
                    }, 2000);
                }
                else 
                {
                    $('.toast').addClass('bg-error');
                    $('.toast-body').text(res.message);
                    $('.toast').toast('show');   
                }
            })
            .fail(function(res) {
                console.log(res);
            });   
        }
        else if(password !== cPassword) {
            $('.toast').addClass('bg-error');
            $('.toast-body').text("Passwords do not match.");
            $('.toast').toast('show');
            $('#confirmPswInput').focus();
        }
    }
    
    $(document).ready(function() {
        $('#signUpButton').click(signUp);
        
        // trigger during the hide of the toast notification
        // remove any added background color class. ie. bg-primary, bg-successfully-created
        $('#toastNotification').on('hide.bs.toast', function() {
            const classLst = ['bg-error', 'bg-successfully-created'];
            $(this)[0].classList.remove(...classLst);
        });
    });
</script>