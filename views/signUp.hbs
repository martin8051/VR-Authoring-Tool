    }
    
    .content .input-field select option {
        background-color: rgba(0, 0, 0, 0.5);
    }    

    h1 {
        text-align: center;
        font-size: 32px;
        font-weight: 600;
        padding-top: 20px;
        padding-bottom: 10px;
        color: white;
    }

    a {
        font-weight: 600;
        color: white;
        text-decoration: none;
    }
    
    a:hover {
        color: #ece6e8 !important;
    }

    .input-field .validate {
